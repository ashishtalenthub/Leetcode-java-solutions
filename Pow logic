public class Test {

	public static void main(String[] args) {

		int basenumber = 2, exponent = 4;
		long temp = 1;

		for (; exponent != 0; --exponent) {

			temp *= basenumber;
		}

		System.out.println("Result: " + temp);
	}
}

// using while loop 

public class Test {

 public static void main(String[] args) {

  int basenumber = 2, exponent = 3;
  long temp = 1;

  while (exponent != 0) {
   temp *= basenumber;
   --exponent;
  }

  System.out.println("Result: " + temp);
 }
}
